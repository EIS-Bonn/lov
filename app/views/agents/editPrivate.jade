extends ../layout/layout
block content
      section#post.postBlue
        article
          header.wrpl.w-3-3
            h1 #{agent.name} 
      section#posts.default-area
          article
            #greenContainer.contents.clear.col-2.split.wrplGreen
              form(method="post", action='/agents/private/' + agent.id)
                input(type='hidden', name='_csrf', value="#{csrf_token}")
                input(type="hidden", name="_method", value="PUT")
                input#agentHidden(type="hidden", name="agentHidden")
                #signupRemove.signupRemove(onclick="this.style.display = 'none';document.getElementById('agentHidden').value = '';document.getElementById('user-name-agent').disabled = false;") X
                input#user-name-agent.typeahead(type='text', name="name", placeholder='Full name', value=agent.name, autocomplete='off')
                input(type='email', name="email", placeholder='Email', value=agent.email)
                select#selector(name='languages', multiple='multiple', style='discplay:none;')
                  for lang in langs
                    if(agent.languages && JSON.stringify(agent.languages).indexOf(lang.id)>-1)
                      option(value='#{lang.id}', selected='true') #{lang.label}
                    else
                      option(value='#{lang.id}') #{lang.label}
                //-input#callBackFn(type='text', name="callBackFn", placeholder='Optional Callback Function', value=agent.callBackFn)
                input.loginButtonLeft(type='submit' value='Save')
                .loginButtonRight
                  a(href="/agents", title="cancel") Cancel